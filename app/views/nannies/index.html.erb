<h1>Available Nannies</h1>

<div class = "container">
    <div class= "row" >
       <input class="form-control search-bar" type="text" placeholder="Search" aria-label="Search" id="search">
    <br>
    <br>
    <a class="btn btn-flat" href="#">Search</a>
    </div>

    <div class="content">
      <div id="map-wrapper">
            <div
              id="map"
              style="
              width: 100%;
              height: 300px;
              margin: 32px 0;
              border-radius: 6px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
            ></div>
        </div>

      <div class="cards">
        <% @nannies.each do |nanny| %>
            <div class="card-product">
              <% if nanny.user.photo.attached? %>
              <%= cl_image_tag(nanny.user.photo.key, :width=>300, :height=>300, :crop=>"scale") %>
              <% end %>

              <div class="card-product-infos">
                <h2><%= link_to nanny.name, nanny_path(nanny)  %></h2>
                <p> <strong> Â£<%= nanny.price_per_hour%> per hour </strong></p>
              </div>
          </div>
        <% end %>
      </div>
    </div>
</div>


