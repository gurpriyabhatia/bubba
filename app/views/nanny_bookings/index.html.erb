<div class="container">
  <div class="d-flex justify-content-between">
    <h3>YOUR BOOKINGS</h3>
    <p><%= link_to 'Add a new booking', nannies_path, :class => "btn btn-flat booking-btn-flat" %> </p>
  </div>


  <% @nanny_bookings.each do |nanny_booking| %>
    <div class="booking-card">
      <%=  cl_image_tag("#{nanny_booking.nanny.user.photo.key}", :width=>279, :height=>279, :crop => :thumb, :gravity => :face) if nanny_booking.nanny.user.photo.attached? %>


      <%#= image_tag booking.nanny.image, alt: "Picture of the nanny" %>
      <div class="card-product-infos">
        <h2>Nanny: <%= nanny_booking.nanny.name %></h2>
        <p><%= nanny_booking.date.strftime("Date: %d/%m/%y") %> </p>
        <%= link_to 'View booking', nanny_nanny_booking_path(@nanny, nanny_booking), :class => "link" %>

      </div>
    </div>
  <% end %>

</div>
