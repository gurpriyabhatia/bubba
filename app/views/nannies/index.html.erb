<div class="nannies-container">
  <h2>Available Nannies</h2>

  <div class= "row" >
  <!-- Search form -->
  <input class="form-control search-bar" type="text" placeholder="" aria-label="Search" id="search">
  <br>
  <a class="btn btn-flat" href="#">Search</a>
  </div>

  <br>


  <div class="content">
    <div class="cards" data-imgs="<%= @imgs.to_json %>">
      <!-- <div class = "row"> -->

        <% @nannies.each do |nanny| %>
          <div>
            <div class="card-trip">
              <% if nanny.user.photo.attached? %>
                <%= image_tag nanny.user.photo, alt: "Picture of the nanny" %>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to nanny.name, nanny_path(nanny), :class => "link"%> </h2>
                   <p> <strong> Â£<%= nanny.price_per_hour%> per hour </strong></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <!-- </div> -->
    </div>
    <div id="map-wrapper">
        <div
          id="map"
          style="
          width: 33vw;
          height: 100vh;
          margin: 32px 0;
          border-radius: 8px;
    position: sticky;
    top: 0;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>
      <!-- </div> -->

    </div>
  </div>
</div>
