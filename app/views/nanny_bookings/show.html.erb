<div class = "nanny-booking-container">
<!--   <div class="row"> -->

    <div class="d-flex align-items-center purple-background">
      <div class="empty"></div>
            <h6 class="m-0">You have booked <%= @nanny.name %></h6>
            <%= cl_image_tag("#{@nanny.user.photo.key}", :width=>100, :height=>100, :crop => :thumb, :radius => :max,:gravity => :face) if @nanny.user.photo.attached? %>
          </div>




  <!-- </div> -->

  <div class="col-sm-8 mt-3">

    <%= link_to 'Back to your bookings', nanny_nanny_bookings_path, class: "event-index-button" %>

    <h3>Details</h3>


    <div class="nanny-booking-details-card">
        <p><i class="far fa-calendar" style="color:#484848">&nbsp;</i><%= @nanny_booking.date.strftime("%d-%m-%y") %></p>
        <p><i class="fas fa-map-marker-alt" style="color:#484848">&nbsp;</i><%= @nanny_booking.address %></p>
        <p><i class="far fa-clock" style="color:#484848">&nbsp;</i><%= @nanny_booking.duration %> hours</p>
        <p><i class="fas fa-baby" style="color:#484848">&nbsp;</i><%= @nanny_booking.number_of_children %> hours</p>
        <% if @nanny_booking.special_instructions %>
          <p><i class="far fa-comment" style="color:#484848">&nbsp;</i><%= @nanny_booking.special_instructions %></p>
        <% else %>
          <p>No special instructions for this booking!</p>
        <% end %>
        <p><i class="fas fa-coins" style="color:#484848">&nbsp;</i>Â£<%= (@nanny_booking.duration * @nanny.price_per_hour) %></p>
      <div class="nanny-booking-card-buttons">
        <%= link_to 'Edit', edit_nanny_nanny_booking_path(@nanny, @nanny_booking), class: "nanny-booking-card-button" %>
        <%= link_to 'Delete', nanny_nanny_booking_path(@nanny, @nanny_booking),
                  class: "nanny-booking-card-button",
                  method: :delete,
                  data: {confirm: "Are you sure?"} %>
      </div>
    </div>

  </div>


</div>
