<h1>Discover our Group</h1>

<div class="container">
  <div class="row">
      <div class="col-10 d-flex align-items-center">
        <%= @group.name %>
        <%= @group.description %>
        <%= @group.address %>
        <%= @group.location %>
      </div>
      <div class="col-2">
        <a class="btn btn-flat" href="#">Join this Group</a>
    </div>
  </div>

<h2>Find the participants of the <strong><%= @group.name %></strong></h2>
<div class="col-4 d-flex align-items-center justify-content-between">
  <div class="row">
      <% @users.first(5).each do |user| %>
        <div class="card-product">
            <div class="d-flex align-content-start flex-wrap">
            <%= cl_image_tag user.photo %>
            <a class="btn btn-flat" href="#">Contact details</a>
            </div>
          <div class="card-product-infos">
            <h2><%= user.full_name %></h2>
            <p><%= user.bio %></p>
          </div>
        </div>
      <% end %>
    </div>
    </div>
</div>


  <div class="col">
    <% @events.each do |event| %>
      <%= event.name %>
      <%= event.description %>
    <% end %>
  </div>
</div>




