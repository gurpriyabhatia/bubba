<div class = "container">
  <div class="row">
    <div class="col-sm-4">
      <div class="shadow-sm p-3 mb-5 mt-5 bg-white rounded nanny-profile-card">
        <div class="row">
          <div class="nanny-avatar-container">
          <img src="https://source.unsplash.com/random" alt="">
          </div>
        </div>
        <class class="card p-3 mt-3 mb-3 border border-white">
          <p class="text-center"><strong><%= @nanny_booking.nanny.name %></strong></p>

          <div class="col text-center">
            <p><strong><%= link_to "View Profile", nanny_path(@nanny_booking.nanny), :class => "btn btn-flat" %></strong></p>
          </div>

        </class>
      </div>
    </div>

<div class="col-sm-8 mt-3">
  <h1>Your Booking Details</h1>
    <div class="card-product">
      <div class="card-product-infos">
          <p><strong>Date:</strong> <%= @nanny_booking.date %></p>
          <p><strong>Address:</strong> <%= @nanny_booking.address %></p>
          <p><strong>Duration:</strong> <%= @nanny_booking.duration %> Hrs</p>
          <p><strong>Number of children:</strong> <%= @nanny_booking.number_of_children %></p>
          <p><strong>Special Instructions:</strong> <%= @nanny_booking.special_instructions %></p>
          <p><strong>Total Price:</strong> XXXXXXXX</p>
      </div>
    </div>




    <div class="booking-actions">
      <%= link_to 'Edit this booking', edit_nanny_nanny_booking_path(@nanny, @nanny_booking) %>

      <%= link_to 'Delete this booking', nanny_nanny_booking_path(@nanny, @nanny_booking),
                method: :delete,
                data: {confirm: "Are you sure?"} %>

      <%= link_to 'Back to your bookings', nanny_nanny_bookings_path %>
    </div>

  <!-- </div> -->


</div>
