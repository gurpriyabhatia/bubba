
<h1>Groups#index</h1>

<div class = "container">
    <div class= "row" >
       <input class="form-control search-bar" type="text" placeholder="Search" aria-label="Search" id="search">
    </div>

    <div class="content">
      <div id="map-wrapper">
            <div
              id="map"
              style="
              width: 100%;
              height: 300px;
              margin: 32px 0;
              border-radius: 6px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
            ></div>
        </div>

      <% @groups.each do |group| %>
        <div class="card-product">
            <%= cl_image_tag group.group_picture.key %>
            <div class="card-product-infos">
              <h2><%= group.name %></h2>
              <p><%= group.description %></p>
              <p><%= group.address %></p>
            </div>
        </div>
      <% end %>
    </div>
</div>
