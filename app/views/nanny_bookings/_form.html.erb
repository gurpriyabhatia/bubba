


      <%= simple_form_for [@nanny, NannyBooking.new] do |f| %>
        <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
        <%= f.input :date, label: "Start time", as: :string %>
        <%= f.input :duration, label: "Nb. of hours" %>
        <%= f.input :address %>
        <%= f.input :number_of_children %>
        <%= f.input :special_instructions %>
            <%= f.submit "Confirm your booking", class: "btn-flat"  %>
        <% end %>


