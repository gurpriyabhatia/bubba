<div class="container">
  <div class="nanny-show-container px-3 py-2">
    <div class="mb-3 mt-3">
      <div class="d-flex align-items-center">
        <h6 class="m-0">Hi, I am <%= @nanny.name %></h6>
        <%= cl_image_tag("#{@nanny.user.photo.key}", :width=>100, :height=>100, :crop => :thumb, :radius => :max,:gravity => :face) if @nanny.user.photo.attached? %>
      </div>
      <div class="mt-3">
        <p class="m-0"><i class="fas fa-home" style="color:#484848">&nbsp;</i><%= @nanny.address %></p>
        <p class="m-0"><i class="fas fa-envelope-open-text" style="color:#484848">&nbsp;</i><%= @nanny.user.email %></p>
        <p class="m-0"><i class="fas fa-mobile-alt"style="color:#484848">&nbsp;&nbsp;</i><%= @nanny.mobile_number %></p>
      </div>
      <div class="card mt-2 mb-2 border border-white">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <p class="m-0">Â£<%= @nanny.price_per_hour %> per hour</p>
          <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#exampleModal">
            Book now
          </button>
        </div>
        <div>
          <p class="text-justify font-italic"><%= @nanny.bio %>.</p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "modal" %>
