


<div class = "container">
  <em><p class="mt-0" style="color:#8C1BA8;"><i class="fas fa-baby-carriage" style="color:#8C1BA8;"></i> Groups near you.</p></em>


    <div class="content">
      <div id="map-wrapper">
            <div
              id="map"
              style="
              width: 100%;
              height: 300px;
              margin: 12px 0;
              border-radius: 6px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
            ></div>
        </div>

      <div class="cards">
        <% @groups.each do |group| %>
          <%= link_to group_path(group), class: "link-card card-product" do %>
              <%= cl_image_tag group.group_picture.key %>
              <div class="card-product-infos">

                <h2><%= group.name %></h2>
                <p><%= group.description %></p>
                <p><%= group.address %></p>
              </div>
          <% end %>

        <% end %>
      </div>
    </div>
</div>
